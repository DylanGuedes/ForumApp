<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-3">
    <div class="sectionfont">Topic</div>
  </div>
  <div class="col-md-2">
    <div class="sectionfont">Author</div>
  </div>
  <div class="col-md-1">
    <div class="sectionfont">Replys</div>
  </div>
  <div class="col-md-2">
    <div class="sectionfont">Last post</div>
  </div>
  <div class="col-md-1">
  </div>
</div>

<% @topics.each do |topic| %>
  <div id="container">
    <div id="containertopic">
      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-4">
          <h3><%= link_to "#{topic.title}", "/sections/topics/"+topic.id.to_s %></h3>
          <h5><%= topic.subtitle %></h5>
        </div>
        <div class="col-md-2">
          <h3><%= link_to "#{topic.user.login}", "/users/"+topic.user.id.to_s %></h3>
        </div>
        <div class="col-md-1">
          <h1><%= topic.posts.count %></h1>
          </div>
        <div class="col-md-2">
          <% if topic.posts.empty? %>
            <h3>By: <%= link_to "#{topic.user.login}", "/users/"+topic.user.id.to_s %></h3>
            <h3>at <%= topic.created_at.strftime("%H:%M") %></h3>
          <% else %>
            <h3>By: <%= link_to "#{topic.posts.last.user.login}", "/users/"+topic.posts.last.user.id.to_s %></h3>
            <h3>at <%= topic.posts.last.created_at.strftime("%H:%M") %></h3>
          <% end %>
        </div>
        <div class="col-md-2">
        </div>
        <div class="col-md-2">
        </div>
      </div>
      <div class="report">
        <div class="right"><%= link_to "Report this topic", "/report_topic/"+topic.id.to_s %></div>
      </div>
      <br><br>
    </div>
  </div>
<% end %>
