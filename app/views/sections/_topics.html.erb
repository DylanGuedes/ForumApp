<div class="section group">
  <div class="col span_2_of_12">
  </div>
  <div class="col span_3_of_12">
    <h4>Topic</h4>
  </div>
  <div class="col span_2_of_12">
    <h4>Author</h4>
  </div>
  <div class="col span_1_of_12">
    <h4>Replys</h4>
  </div>
  <div class="col span_2_of_12">
    <div class="lastpost"><h4>Last post</h4></div>
  </div>
  <div class="col span_2_of_12">
  </div>
</div>
<% @topics.each do |topic| %>
  <div id="container">
    <div class="section group">
      <div class="col span_5_of_12">
        <h3><%= link_to "#{topic.title}", "/sections/topics/"+topic.id.to_s %></h3>
        <h5><%= topic.subtitle %></h5>
      </div>
      <div class="col span_2_of_12">
        <h4><%= link_to "#{topic.user.login}", "/users/"+topic.user.id.to_s %></h4>
      </div>
      <div class="col span_2_of_12">
        <center><h1><%= topic.posts.count %></h1></center>
      </div>
      <div class="col span_3_of_12">
        <div class="lastpost">
          <h3>By: <%= link_to "#{topic.posts.last.user.login}", "/users/"+topic.posts.last.user.id.to_s %></h3>
          <h3>at <%= topic.posts.last.created_at.strftime("%H:%M") %></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="report">
    <div class="right"><%= link_to "Report this topic", "/report_topic/"+topic.id.to_s %></div>
  </div>
  <br><br>
<% end %>
