<% @topics.each do |topic| %>
<div id="container">
  <div class="row">
    <div class="col-2">
      <h1><%= link_to "#{topic.title}", "/sections/topics/"+topic.id.to_s %></h1>
      <h5><%= topic.subtitle %></h5>
    </div>
    <div class="col-1">
      <h1>Posts: <%= topic.posts.count %></h1>
    </div>
    <div class="col-1">
      <div class="right">
        <h3>By: <%= link_to "#{topic.posts.last.user.login}", "/users/"+topic.posts.last.user.id.to_s %></h3>
        <h3>at <%= topic.posts.last.created_at.strftime("%H:%M") %></h3>
      </div>
    </div>
  </div>
</div>
<% end %>
