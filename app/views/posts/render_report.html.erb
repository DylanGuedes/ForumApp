<center>
  <h1>
    Reporting post #<%= @post.id %>, created by <%= @post.user.login %>.
    Reporter: <%= current_user.login %> 
  </h1>

  <%= form_for @report do |f| %>
     <%= f.label :description, "Description" %><br>
     <%= f.text_area :description %><br>
     <%= f.submit "done", { :controller => 'posts', :action => 'create_report', name: "post_id", value: @post.id } %>
   <% end %> 
</center>