<% if params[:action] != 'edit' %>
  <%= f.label :login, "Login", class: 'signup_text' %><br>
  <%= f.text_field :login, class: 'form-control' %><br><br>
<% elsif params[:action] == 'edit' %>
  <%= f.label :login, "Login", class: 'signup_text' %><br><br>
  <%= "#{@current_user.login}" %><br><br>
<% end %>

<%= f.label :email, "Email", class: 'signup_text' %><br>
<%= f.text_field :email, class: 'form-control' %><br><br>

<%= f.label :password, "Password", class: 'signup_text' %><br>
<%= f.password_field :password, class: 'form-control' %><br><br>

<%= f.label :password_confirmation, "Confirmation", class: 'signup_text' %><br>
<%= f.password_field :password_confirmation, class: 'form-control' %><br><br>
