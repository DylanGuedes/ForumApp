<% @posts.each do |post| %>
  <div id="container">
    <div class="section group">
      <div class="col span_4_of_12">
        <h4><%= link_to "#{post.user.login}", '/sections/topics/'+post.topic.id.to_s %></h4>
      </div>
      <div class="col span_6_of_12">
        <p> <%= post.report_description %></p>
      </div>
      <div class="col span_2_of_12">
        <h4><%= link_to " # #{post.id}", '#' %></h4>
      </div>
    </div>
  </div>
<% end %>
