<div class="row">
  <div class="col-md-1">
  </div>

  <div class="col-md-3">
    <div id="container">
      <center><%= render '/topics/user' %></center>
    </div>
  </div>

  <div class="col-md-8">
    <div id="container">
      <%= render '/topics/main_post' %>
    </div>
  </div>
</div>

<% if current_user %>
  <div class="quote_mainpost">
    <h3>Quote this post</h3>
  </div>
  <div class="target_mainpost">
    <% quote_post = Post.new %>
    <% quote_post.topic = @topic %>
    <% quote_post.user = current_user %>
    <% quote_post.content = "[quote]"+@topic.content+"[/quote]" %>
    <%= form_for quote_post do |b| %>
      <%= b.text_area :content, cols: 100, rows: 15 %>
      <%= b.submit "Done!", class: "button success round large", name: "topic_id", value: quote_post.topic.id %>
    <% end %>
  </div>
<% end %>
<%= link_to "Report this topic", '/report_posts/'+@topic.id.to_s %>

<%= render '/topics/post' %>

<%= link_to 'New post', "/sections/topics/#{@topic.id}/new" %>
